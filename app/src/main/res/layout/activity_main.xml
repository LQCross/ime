<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- 标题 -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF333333"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- 应用图标区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="123"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#FF2C2C2C"
            android:gravity="center"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简单易用的数字输入法"
                android:textSize="14sp"
                android:textColor="#FF666666" />
        </LinearLayout>
    </LinearLayout>

    <!-- 使用说明 -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用步骤"
        android:textSize="16sp"
        android:textColor="#FF333333"
        android:lineSpacingExtra="4dp"
        android:padding="16dp"
        android:background="#FFF5F5F5"
        android:layout_marginBottom="32dp" />

    <!-- 启用输入法按钮 -->
    <Button
        android:id="@+id/enable_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/enable_ime"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#FF2196F3"
        android:layout_marginBottom="16dp" />

    <!-- 选择输入法按钮 -->
    <Button
        android:id="@+id/select_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="选择输入法"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#FF4CAF50" />

    <!-- 底部说明 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="提示：启用输入法后，您可以在任何文本输入框中使用数字键盘进行输入。键盘包含0-9数字键以及复制、粘贴、清空、删除功能键。"
        android:textSize="12sp"
        android:textColor="#FF999999"
        android:gravity="bottom|center_horizontal"
        android:layout_marginTop="24dp" />

</LinearLayout>
