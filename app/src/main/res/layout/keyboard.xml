<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FF2C2C2C"
    android:padding="8dp">

    <!-- 第一行：1, 2, 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="1"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />

        <Button
            android:id="@+id/key_2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="2"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />

        <Button
            android:id="@+id/key_3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />
    </LinearLayout>

    <!-- 第二行：4, 5, 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="4"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />

        <Button
            android:id="@+id/key_5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="5"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />

        <Button
            android:id="@+id/key_6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />
    </LinearLayout>

    <!-- 第三行：7, 8, 9 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="7"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />

        <Button
            android:id="@+id/key_8"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="8"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />

        <Button
            android:id="@+id/key_9"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />
    </LinearLayout>

    <!-- 第四行：0 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/key_0"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="#FF404040" />

        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- 功能键行：复制, 粘贴, 清空, 删除 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/key_copy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/copy"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#FF0066CC" />

        <Button
            android:id="@+id/key_paste"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/paste"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#FF0066CC" />

        <Button
            android:id="@+id/key_clear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/clear"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#FFCC6600" />

        <Button
            android:id="@+id/key_delete"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#FFCC0000" />
    </LinearLayout>

</LinearLayout>
